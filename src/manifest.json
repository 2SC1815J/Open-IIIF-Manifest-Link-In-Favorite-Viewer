{
  "manifest_version": 2,
  "name": "Open in IIIF Viewer",
  "version": "0.1.10",
  "description": "A Firefox/Chrome extension to open IIIF manifest link in your favorite IIIF viewer.",
  "author": "2SC1815J",
  "applications": {
    "gecko": {
      "id": "openiiifmanifestlink@example.com"
    }
  },
  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ],
  "background": {
    "scripts": [
      "browser-polyfill.min.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*",
        "file:///*"
      ],
      "js": [
        "browser-polyfill.min.js",
        "content.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_icon": "icon.svg"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}